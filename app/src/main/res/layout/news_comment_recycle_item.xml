<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="42dp"
        android:layout_height="42dp"
        tools:background="@mipmap/ic_new_avatar_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                tools:text="用户名" />

            <TextView
                android:id="@+id/comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                tools:text="2018-12-24 16:31" />
        </RelativeLayout>


        <com.ctetin.expandabletextviewlibrary.ExpandableTextView
            android:id="@+id/comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/nb.text.common_h1"
            android:textSize="14sp"
            app:ep_max_line="5"
            app:ep_need_contract="true"
            app:ep_need_expand="true"
            app:ep_need_link="false"
            app:ep_need_mention="false"
            tools:text="评论内容" />

        <TextView
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/post_item_like"
            android:drawablePadding="5dp"
            android:layout_gravity="right"
            tools:text="125" />


    </LinearLayout>
</LinearLayout>
