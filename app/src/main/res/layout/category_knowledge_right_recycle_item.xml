<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/dp_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/typeItemFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_6"
            android:visibility="gone"
            android:text="一级目录"
            android:textColor="@color/grey2"
            android:textSize="@dimen/small"
            skin:enable="true" />



        <me.gujun.android.taggroup.TagGroup
            android:id="@+id/tg_category"
            style="@style/TagGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            app:atg_borderColor="@color/gray"
            app:atg_horizontalSpacing="@dimen/dp_8"
            app:atg_isAppendMode="false"
            app:atg_textColor="@color/black"
            app:atg_verticalPadding="@dimen/dp_8"
            app:atg_verticalSpacing="@dimen/dp_15" />
    </LinearLayout>
</LinearLayout>